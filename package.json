{
  "name": "koodin",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "description": "Code for koodin.nl",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koodin-nl/koodin.nl.git"
  },
  "author": "Timo Westland <timo.westland@koodin.nl>",
  "contributors": [
    "Jurre Berkhout <jurre.berkhout@koodin.nl>"
  ],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/koodin-nl/koodin.nl/issues"
  },
  "homepage": "https://github.com/koodin-nl/koodin.nl#readme",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/.css\"",
    "prebuild": "npm run clean && echo clean âœ¨",
    "build:css": "postcss styles/**/*css --base styles --dir app/styles",
    "build:css:prod": "npm run build:css -- --env production",
    "build:remix": "remix build",
    "build:server": "tsx ./other/build-server.js",
    "build": "npm run build:css:prod && npm run build:remix && npm run build:server",
    "dev": "pm2-dev ./other/pm2.config.js",
    "start": "cross-env NODE_ENV=production node ./index.js",
    "typecheck": "tsc -b .",
    "format": "prettier --write .",
    "proxy": "local-ssl-proxy --source 3010 --target 3000 --cert localhost.pem --key localhost-key.pem",
    "deploy": "fly deploy --remote-only"
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.8.1",
    "@notionhq/client": "^2.2.3",
    "@reach/accordion": "^0.18.0",
    "@reach/menu-button": "^0.18.0",
    "@remix-run/express": "^1.12.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@storyblok/react": "^1.3.4",
    "axios": "0.27.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "error-stack-parser": "^2.1.4",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "focus-trap-react": "^10.2.2",
    "framer-motion": "^9.0.2",
    "helmet": "^6.0.1",
    "is-plain-obj": "3.0.0",
    "isbot": "^3.6.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "on-finished": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "react-markdown": "^8.0.5",
    "remix-typedjson": "^0.1.7",
    "remix-utils": "^6.6.0",
    "server-timing": "^3.3.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@types/clone-deep": "^4.0.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/on-finished": "^2.3.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "browserlist": "^1.0.1",
    "cssnano": "^5.1.14",
    "esbuild": "^0.17.12",
    "eslint": "^8.27.0",
    "fs-extra": "^11.1.0",
    "glob": "^9.3.0",
    "local-ssl-proxy": "^2.0.5",
    "patch-package": "^6.5.1",
    "pm2": "^5.2.2",
    "postcss-cli": "^10.1.0",
