{
  "name": "koodin",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "imports": {
    "#*": "./*"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "description": "Code for koodin.nl",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koodin-nl/koodin.nl.git"
  },
  "author": "Timo Westland <timo.westland@koodin.nl>",
  "contributors": [
    "Jurre Berkhout <jurre.berkhout@koodin.nl>"
  ],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/koodin-nl/koodin.nl/issues"
  },
  "homepage": "https://github.com/koodin-nl/koodin.nl#readme",
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "scripts": {
    "build:icons": "tsx ./other/build-icons.ts",
    "build:remix": "remix build --sourcemap",
    "build:server": "tsx ./other/build-server.ts",
    "build": "run-s build:*",
    "predev": "npm run build:icons --silent",
    "dev": "remix dev -c \"node ./server/dev-server.js\" --manual",
    "start": "cross-env NODE_ENV=production node .",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "proxy": "local-ssl-proxy --source 3010 --target 3000 --cert localhost.pem --key localhost-key.pem",
    "deploy": "fly deploy --remote-only",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@conform-to/react": "^1.0.0",
    "@conform-to/zod": "^1.0.0",
    "@epic-web/invariant": "^1.0.0",
    "@nasa-gcn/remix-seo": "^2.0.0",
    "@notionhq/client": "^2.2.14",
    "@radix-ui/react-label": "^2.0.2",
    "@reach/accordion": "^0.18.0",
    "@remix-run/express": "^2.6.0",
    "@remix-run/node": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "@sentry/profiling-node": "^1.3.5",
    "@sentry/remix": "^7.99.0",
    "@storyblok/react": "^3.0.8",
    "address": "^2.0.1",
    "chalk": "^5.3.0",
    "close-with-grace": "^1.2.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.1",
    "error-stack-parser": "^2.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "framer-motion": "^11.0.3",
    "get-port": "^7.0.0",
    "helmet": "^7.1.0",
    "is-plain-obj": "4.1.0",
    "isbot": "^4.4.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-html-parser": "^6.1.12",
    "on-finished": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remix-flat-routes": "^0.6.4",
    "remix-typedjson": "^0.4.1",
    "remix-utils": "^7.5.0",
    "server-timing": "^3.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@remix-run/dev": "^2.6.0",
    "@remix-run/eslint-config": "^2.6.0",
    "@types/clone-deep": "^4.0.4",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.56.2",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/on-finished": "^2.3.4",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
